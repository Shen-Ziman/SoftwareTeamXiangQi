namespace SoftwareTeamXiangQi
{
   
    class Board
    {
        int row;
        int coloumn;
        int status;
        //string status;

        public Board()
        {
            row = 10;
            coloumn = 9;
            status = 0;
        }
    }
    
    class Chess{
        int row;
        int column;
        int color;
        int  typeChess;
        public Chess(int row, int column, int color,int type){
            this.row = row;
            this.column = column;
            this.color = color;
            this.typeChess = type;
        }
    }

    class King : Chess{
        public King(int row, int column , int color ) : base(row ,column, color, 0){ // 0 == typeChess.King

        }

    }

    
    class Guard : Chess{
        public Guard(int row, int column , int color ) : base(row ,column, color, 1) { // 1 == typeChess.Guard

        }

    }

     class Elephant : Chess{
        public Elephant(int row, int column , int color ) : base(row ,column, color, 2) { // 2 == typeChess.Elephant

        }

    }

     class Horse : Chess{
        public Horse(int row, int column , int color ) : base(row ,column, color, 3) { // 3 == typeChess.Horse

        }

    }

     class Rook : Chess{
        public Rook(int row, int column , int color ) : base(row ,column, color, 4) { // 4 == typeChess.Rook

        }

    }

     class Cannon : Chess{
        public Cannon(int row, int column , int color ) : base(row ,column, color, 5) { // 5 == typeChess.Cannon

        }

    }

     class Soilder : Chess{
        public Soilder(int row, int column , int color ) : base(row ,column, color, 6) { // 6 == typeChess.Solider

        }

    }

    

    public enum status{not_chess,red_chess,black_chess};
    public enum color{red,black};
    public enum typeChess{King,Guard,Elephant,Horse,Rook,Cannon,Soilder};

}